{{>layout/header}}

<body>
<div class="wrapper">
    <header>
        <div class="container">
            <div class="header-data">
                <div class="logo">
                    <a href="/" title=""><img src="/images/logo.png" alt=""></a>
                </div><!--logo end-->
                <div class="search-bar">
                    <form>
                        <input type="text" name="search" placeholder="Search...">
                        <button type="button" href="/search"><i class="la la-search"></i></button>
                    </form>
                </div><!--search-bar end-->
                <nav>
                    <ul>
                        <li>
                            <a href="/" title="home">
                                전체
                            </a>
                        </li>
                        <li>
                            <a href="/hot" title="hot">
                                인기
                            </a>
                        </li>
                        <li>
                            <a href="/recruit" title="recruit">
                                취업
                            </a>
                        </li>
                        <li>
                            <a href="/tech" title="tech">
                                기술
                            </a>
                        </li>
                    </ul>
                </nav><!--nav end-->
                <div class="menu-btn">
                    <a href="javascript:;" title=""><i class="fa fa-bars"></i></a>
                </div><!--menu-btn end-->
                <div class="user-account">
<!--                    <div class="user-info">-->
<!--                        <a href="javascript:;" title="userName">user</a>-->
<!--                        <i class="la la-sort-down"></i>-->
<!--                    </div>-->
                    <div class="user-account-settings">
                        <h3>이동욱님</h3>
                        <h4>Setting</h4>
                        <h4 class="tc"><a href="/logout" title="">Logout</a></h4>
                    </div><!--user-account-settings end-->
                </div>
            </div><!--header-data end-->
        </div>
    </header><!--header end-->

    <main>
        <div class="main-section">
            <div class="container">
                <div class="main-section-data">
                    <div class="row">
                        <div class="col-lg-3">
                            <div class="filter-secs">
                                <div class="filter-heading">
                                    <h3>인프런광고</h3>
                                </div><!--filter-heading end-->
                                <div class="paddy">
                                    <div class="filter-dd">
                                        <form class="job-tp">

                                        </form>
                                    </div>
                                </div>
                            </div><!--filter-secs end-->
                        </div>
                        <!-- posts start -->
                        <div class="col-lg-6">
                            <div class="main-ws-sec">
                                <div class="posts-section">
                                    {{#articles}}
                                        <div class="post-bar">
                                            <div class="post_topbar">
                                                <div class="usy-dt">
                                                    <div class="usy-name">
                                                        <span><img src="/images/clock.png" alt="">{{registrationDateTime}}</span>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="job_descp">
                                                <h3>{{limitTitle}}</h3>
                                                <p>{{limitContent}}... <a href="#" title="">view more</a></p>
                                                <ul class="skill-tags">
                                                    <li><a href="#" title="">{{articleTypeName}}</a></li>
                                                </ul>
                                            </div>
                                            <div class="job-status-bar">
                                                <ul class="like-com">
                                                    <li>
                                                        <a href="#"><i class="la la-heart"></i> Like {{likes}}</a>
                                                    </li>
                                                    <li>
                                                        <a><i class="la la-eye"></i>Views {{views}}</a>
                                                    </li>
                                                </ul>
                                                <a><i class="la la la-bookmark"></i></a>
                                            </div>
                                        </div><!--post-bar end-->
                                    {{/articles}}

                                    <div class="process-comm">
                                        <div class="spinner">
                                            <div class="bounce1"></div>
                                            <div class="bounce2"></div>
                                            <div class="bounce3"></div>
                                        </div>
                                    </div><!--process-comm end-->
                                </div><!--posts-section end-->
                            </div><!--main-ws-sec end-->
                        </div>
                        <div class="col-lg-3">
                            <div class="right-sidebar">
                                <div class="widget widget-about">
                                    <h3>구글 광고</h3>
                                </div><!--widget-about end-->
                                <div class="widget widget-jobs">
                                    <div class="sd-title">
                                        <h3>Top News</h3>
                                    </div>
                                    <div class="jobs-list">
                                        <div class="job-info">
                                            <div class="job-details">
                                                <h3>초개모 탑뉴스1</h3>
                                                <p>이거안되나요..</p>
                                            </div>
                                            <div class="hr-rate">
                                                <span>2019.07.17</span>
                                            </div>
                                        </div><!--job-info end-->
                                    </div><!--jobs-list end-->
                                </div><!--widget-jobs end-->
                                <div class="widget widget-about">
                                    <h3>구글 광고2</h3>
                                </div><!--widget-about end-->
                            </div><!--right-sidebar end-->
                        </div>
                    </div>
                </div><!-- main-section-data end-->
            </div>
        </div>
    </main>
</div><!--theme-layout end-->

{{>layout/js}}
</body>

{{>layout/footer}}